.info_container {
  padding: 30rpx;
}

.btn {
  padding: 20rpx 30rpx;
  margin-top: 40rpx;
  border-radius: 10rpx;
}

.item-cell {
  position: relative;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  width: 100%;
  padding: 20rpx 32rpx;
  overflow: hidden;
  color: #323233;
  font-size: 14px;
  line-height: 24px;
  background-color: #fff;
}

.item-field__label {
  -webkit-box-flex: 0;
  -webkit-flex: none;
  flex: none;
  box-sizing: border-box;
  margin-right: 12px;
  color: #646566;
  text-align: left;
  word-wrap: break-word;
}

.right {
  color: #c8c9cc;
  font-size: 14px;
  display: flex;
  align-items: center;
}

.item-cell::after {
  position: absolute;
  box-sizing: border-box;
  content: ' ';
  pointer-events: none;
  right: 16px;
  bottom: 0;
  left: 16px;
  border-bottom: 1px solid #ebedf0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}