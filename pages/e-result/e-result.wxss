.input_con {
  box-sizing: border-box;
  padding: 0 10rpx;
}

.input_con .title {
  font-size: 12px;
  color: #5e6d82;
  padding-left: 30rpx;
}

.row {
  padding: 30rpx 0;
  display: flex;
  align-items: center;
  box-shadow: 0 6px 6px 0 rgba(115, 167, 229, .05);
}

.col {
  height: 120rpx;
  text-align: center;
  font-size: 12px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-top: 1px solid #eef2fd;
  border-bottom: 1px solid #eef2fd;
}

.col_1 {
  flex: 1;
  padding: 0 8rpx;
  background-color: #90a1b5;
  border: 1px solid #eef2fd;
  border-radius: 6px 0 0 6px;
  color: #fff;
  font-weight: 700;
}

.col_2>text,
.col_3>text,
.col_4>text {
  display: inline-block;
  width: 160rpx;
}

.col_2 {
  flex: 3;
  color: #111;
  font-size: 11px;
}

.col_3 {
  flex: 3;
  color: #111;
  font-size: 11px;
  border-left: 1rpx solid #f4f7ff;
}

.col_4 {
  border-left: 1rpx solid #f4f7ff;
  flex: 2;
  color: #111;
  font-size: 11px;
}

.col_5 {
  flex: 2;
  background-color: #f4f7ff;
  border-radius: 0 6px 6px 0;
  background-color: #f4f7ff;
  color: #5a5e66;
}

.active {
  background-color: #ff7b57;
  border-color: #ff7b57;
  color: #ffffff;
}