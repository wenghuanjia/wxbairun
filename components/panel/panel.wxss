.panel_container {
    padding: 0 30rpx;
}

.panel_container .panel_title {
    position: relative;
    display: inline-block;
    margin: 30rpx 0;
    padding-left: 20rpx;
    font-size: 16px;
    font-weight: bold;
    color: #333333;
}

.panel_title::before {
    content: "";
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    width: 6rpx;
    height: 100%;
    background: #0081FF;
    border-radius: 40rpx;
}

.panel_content {
    padding: 0 20rpx;
}